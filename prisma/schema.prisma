generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(uuid())
  username        String     @unique
  password        String
  avatarurl       String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  channels        Channel[]  @relation("MemberOfChannels") // Участник каналов
  messages        Message[]  @relation("UserMessages")     // Отправленные сообщения
  createdChannels Channel[]  @relation("CreatedChannels")  // Каналы, созданные пользователем
}

model Channel {
  id        String   @id @default(uuid())
  name      String
  members   User[]   @relation("MemberOfChannels")         // Участники канала
  creatorId String
  creator   User     @relation("CreatedChannels", fields: [creatorId], references: [id]) // Создатель канала
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages  Message[] @relation("ChannelMessages")         // Сообщения канала
}

model Message {
  id        String  @id @default(uuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  channelId String
  channel   Channel  @relation("ChannelMessages", fields: [channelId], references: [id]) // Связь с каналом

  senderId  String
  sender    User     @relation("UserMessages", fields: [senderId], references: [id])     // Отправитель сообщения
}
